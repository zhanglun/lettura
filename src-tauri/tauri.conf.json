{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:3000/",
    "distDir": "../build"
  },
  "package": {
    "productName": "Lettura",
    "version": "0.1.14"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "open": true
      },
      "http": {
        "request": true,
        "all": true,
        "scope": ["https://**", "http://**", "http://lettura./"]
      },
      "fs": {
        "all": true,
        "scope": ["$DOWNLOAD/*"]
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.lettura.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
          "https://gist.githubusercontent.com/zhanglun/9094b65b31879a79063f396a254830e1/raw"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE4MUNGMUQ0NTlCNEYyNzUKUldSMThyUloxUEVjcVBnQUpzVmZDNDVaSVVZSzh1eTFWd3E4QytXOFNuMXdIRy9wWis2SEhzc2MK"
    },
    "windows": [
      {
        "fullscreen": false,
        "maximized": false,
        "height": 760,
        "decorations": true,
        "resizable": true,
        "title": "Lettura, Your RSS reader",
        "width": 1440,
        "fileDropEnabled": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/tray-mac.png",
      "iconAsTemplate": true
    }
  }
}
